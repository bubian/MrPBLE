<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="85dp"
  card_view:cardBackgroundColor="#E5E5E5"
  card_view:cardCornerRadius="10dp"
  card_view:cardPreventCornerOverlap="true"
  card_view:cardUseCompatPadding="true"
  card_view:contentPadding="10dp">

  <TextView
    android:id="@+id/ble_device_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="LE_SRS_XB20"
    android:textColor="#EE7600"
    android:textSize="15sp"
    tools:ignore="HardcodedText" />

  <TextView
    android:id="@+id/ble_rssi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Rssi: 52"
    android:textSize="13sp"
    tools:ignore="HardcodedText"
    android:layout_gravity="end"
    android:layout_marginTop="8dp"/>

  <TextView
    android:id="@+id/ble_device_uuid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="LE_SRS_XB20"
    android:textSize="11sp"
    android:layout_marginTop="30dp"
    tools:ignore="HardcodedText,SmallSp" />

  <TextView
    android:id="@+id/ble_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="经典蓝牙"
    android:textSize="10sp"
    tools:ignore="HardcodedText,SmallSp"
    android:layout_gravity="end"
    android:layout_marginTop="40dp"
    android:textColor="#EE0000"/>

</android.support.v7.widget.CardView>